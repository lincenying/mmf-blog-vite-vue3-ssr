{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "ESNext",
        "target": "ESNext",
        "lib": ["DOM", "ESNext"],
        "strict": true,
        "esModuleInterop": true,
        "jsx": "preserve",
        "skipLibCheck": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["vite/client", "vue/ref-macros", "unplugin-vue-macros/macros-global", "element-plus/global", "vite-plugin-pwa/client"],
        "paths": {
            "@/*": ["src/*"]
        },
        "outDir": "build"
    },
    "exclude": ["node_modules", "dist/**/*", "public/**/*"]
}
